<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SolarSystemFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/layoutForFragments"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/solarSysTextview"
            style="@style/layoutForFragments"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/solarSysShare"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/solarSysPrevious"
            style="@style/PreviousNextButton"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="@string/previous_button"
            app:layout_constraintBottom_toBottomOf="@+id/solarSysShare"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/solarSysShare"
            app:layout_constraintTop_toTopOf="@+id/solarSysShare" />

        <Button
            android:id="@+id/solarSysNext"
            style="@style/PreviousNextButton"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="@string/next_button"
            app:layout_constraintBottom_toBottomOf="@+id/solarSysShare"
            app:layout_constraintEnd_toStartOf="@+id/solarSysShare"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/solarSysShare" />

        <Button
            android:id="@+id/solarSysShare"
            style="@style/shareButton"
            android:layout_width="231dp"
            android:layout_height="68dp"
            android:text="@string/share_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/solarSysPrevious"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/solarSysNext"
            app:layout_constraintTop_toBottomOf="@+id/solarSysTextview" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>