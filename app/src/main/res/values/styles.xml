<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PreviousNextButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SplashScreenStyle" parent = "Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash_background</item>
    </style>

    <style name="HomeTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DonateButtons">
        <item name="android:layout_width">145dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="layoutForFragments">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="shareButton">
        <item name="android:layout_width">231dp</item>
        <item name="android:layout_height">68dp</item>
    </style>


</resources>